<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".TicketExist"
    android:background="#cc000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button2"
        android:padding="30dp"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You already have a ticket."
            android:textColor="#000000"
            android:textSize="7pt"
            android:gravity="center"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to cancel the ticket\nand buy the new one?"
            android:textColor="#000000"
            android:textSize="7pt"
            android:paddingBottom="20dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            />


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="0dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/proceed_no"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/cancel_red_btn"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#FFF"
                    android:textSize="7pt"
                    android:text="No" />

                <Button
                    android:id="@+id/proceed_yes"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#FFF"
                    android:textSize="7pt"
                    android:text="Yes" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
