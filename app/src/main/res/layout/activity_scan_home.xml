<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScanHome">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:background="#2E3548"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >
        <ImageButton
            android:id="@+id/back_btn_title_bar"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/iconbacktitlebar"
            android:background="#2E3548"
            />

        <TextView
            android:id="@+id/text_scan"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SCAN"
            android:textColor="#FFFF"
            android:textSize="40sp"
            android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code"
            android:textSize="20dp"
            android:layout_marginTop="140dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/barcode_scanner"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code for Booking Van."
            android:textSize="20dp"
            android:layout_marginTop="420dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus on QR Code."
            android:textSize="20dp"
            android:layout_marginTop="450dp"
            android:layout_centerHorizontal="true"/>
        <fragment
            android:id="@+id/barcode_scanner"
            android:name="info.androidhive.barcode.BarcodeReader"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:auto_focus="true"
            app:use_flash="false" />

        <info.androidhive.barcode.ScannerOverlay
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:background="#44000000"
            app:line_color="#FF0000"
            app:line_speed="6"
            app:line_width="4"
            app:square_height="200"
            app:square_width="200" >

        </info.androidhive.barcode.ScannerOverlay>
    </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#2E3548"
            android:padding="5dp"/>

    </LinearLayout>
</LinearLayout>